<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.






    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.






        -->
    </style>
    
    <style name="AppThemeWithActionBar" parent="@style/Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ViettelButton" parent="@android:style/Widget.Button">
        
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@drawable/selector_bg_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">40dip</item>
    </style>
<style name="Location_Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@drawable/selector_bg_button_location</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">40dip</item>
    </style>
    <style name="Next_Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@drawable/selector_bg_button_next</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">40dip</item>
    </style>
    <style name="Calendar_Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:background">@drawable/selector_bg_button_calendar</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">40dip</item>
    </style>


    <style name="vOfficeeditTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/edit_hight_light</item>
        <item name="android:layout_height">@dimen/text_box_heigh</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/padding5</item>
    </style>
    
    
    <style name="ViettelTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/edit_hight_light</item>
        <item name="android:padding">@dimen/padding5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="vOfficeeditTextNoPadding" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_hight_light</item>
        <item name="android:layout_height">@dimen/text_box_heigh</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingRight">@dimen/padding5</item>
    </style>



    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
    </style>

    <style name="viewPagerTitleStrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">@dimen/padding5</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#e65f25</item>
    </style>
</resources>