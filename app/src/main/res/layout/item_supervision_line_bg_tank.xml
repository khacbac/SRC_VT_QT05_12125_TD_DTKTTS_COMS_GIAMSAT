<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_line_bg_tank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_supervision_line_bg_tank_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical"
        android:text="BM001"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical" >

        <EditText
            android:id="@+id/edt_supervision_line_bg_tank_sodan"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditText"
            android:inputType="number"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <CheckBox
            android:id="@+id/rdo_supervision_line_bg_tank_dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <CheckBox
            android:id="@+id/rdo_supervision_line_bg_tank_khongdat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <com.viettel.view.control.VNMTextViewNnkd
            android:id="@+id/edt_supervision_line_bg_tank_nn_khongdat"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <TextView
            android:id="@+id/edt_supervision_line_bg_tank_diengiai"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_common" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            style="@style/ViettelButton"
            android:id="@+id/iv_supervision_line_bg_tank_vitri"
            android:layout_width="@dimen/icon_listview_width"
            android:layout_height="@dimen/icon_listview_height"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_location" />
    </RelativeLayout>

</LinearLayout>