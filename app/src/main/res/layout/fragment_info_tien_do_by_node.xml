<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_no_data"
            style="@style/Header.Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chưa có dữ liệu"
            android:textSize="18sp"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/root_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Header.Textview"
                android:textColor="@color/accent2"
                android:text="Cập nhật theo công trình."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin5"
                android:id="@+id/layoutByCT">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/table_border_color"/>
                <LinearLayout
                    style="@style/Content.LinearRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_row_height"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="horizontal"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5">
                        <TextView
                            style="@style/Header.Textview"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Hạng mục" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:id="@+id/layoutKhoiLuong"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Khối lượng" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5">
                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ngày bắt đầu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5">
                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ngày kết thúc" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottomLayout"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Header.Textview"
                android:layout_marginTop="@dimen/margin10"
                android:textColor="@color/accent2"
                android:text="Cập nhật theo node."/>
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabLayout"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabTextColor="@color/brown"
                app:tabSelectedTextColor="@color/accent2"
                android:layout_marginTop="@dimen/margin5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/table_border_color" />

                <LinearLayout
                    style="@style/Content.LinearRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_row_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding5">

                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Hạng mục" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Khối lượng" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding5">

                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ngày bắt đầu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@drawable/border_right_bottom_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding5">

                        <TextView
                            style="@style/Header.Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ngày kết thúc" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomLayoutByNode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
