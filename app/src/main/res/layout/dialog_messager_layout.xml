<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_messager_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical"
        android:padding="@dimen/padding"
        android:text="@string/text_messager_header"
        android:textSize="@dimen/text_size_large_common"
        android:textColor="@color/black_color"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_dialog_messager_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_messager_header_title"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/bg_white_rounded"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/padding" >

        <TextView
            android:id="@+id/tv_dialog_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:gravity="center_vertical"
            android:textColor="@color/black_color"
            android:text="@string/line_bg_mx_kl_ttct"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:layout_below="@+id/ll_dialog_messager_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_messager_yes"
            style="@style/ViettelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ok" />        
    </LinearLayout>

</RelativeLayout>