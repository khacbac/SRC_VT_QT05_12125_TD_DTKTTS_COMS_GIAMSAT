<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tentu"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:paddingBottom="@dimen/padding1"
        android:paddingTop="@dimen/padding1"
        android:text="Tên tủ" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_right_bottom_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/tv_sl_lapdat"
            style="@style/vOfficeeditTextNumber"
            android:inputType="number"
            android:maxLength="9"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_luyke_ld"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:text="Lũy kế" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_right_bottom_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/tv_sl_hannoi"
            style="@style/vOfficeeditTextNumber"
            android:inputType="number"
            android:maxLength="9"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_luyke_hn"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:text="Lũy kế" />
</merge>

