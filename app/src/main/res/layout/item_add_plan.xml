<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="40dip"
    android:orientation="horizontal"
    android:padding="@dimen/padding_plan_item" >

    <TextView
        android:id="@+id/ed_choose_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:text="@string/label_choose_date"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_plan_size2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ed_plan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/text_view_dot"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_plan_size2"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imv_edit"
        android:layout_width="@dimen/icon_listview_width"
        android:layout_height="@dimen/icon_listview_height"
        android:layout_marginRight="@dimen/margin_right_icon"
        android:src="@drawable/icon_edit" />

</LinearLayout>