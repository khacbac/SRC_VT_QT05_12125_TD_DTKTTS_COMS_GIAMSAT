<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.viettel.actionbar.Header
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_bts_kl_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu"
        android:visibility="gone" >

        <TextView
            android:id="@+id/bts_kl_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/supervision_bts_title"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tl_supervision_bts_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bts_kl_rootmenu"
        android:layout_margin="@dimen/margin5"
        android:background="@drawable/border_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding5"
        android:visibility="visible" >

        <TextView
            android:id="@+id/trl_supervision_bts_equip_row1_tv_thongtin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="0.1"
            android:text="@string/supervision_bts_tt"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_supervision_bts_equip_search_thietke"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:paddingLeft="@dimen/padding_left" >

            <com.viettel.view.control.VNMTextViewCombo
                android:id="@+id/rl_supervision_bts_equip_tv_thietke"
                style="@style/vOfficeeditTextView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true" >
            </com.viettel.view.control.VNMTextViewCombo>
        </RelativeLayout>

        <TextView
            android:id="@+id/rl_supervision_bts_equip_tv_tram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.1"
            android:gravity="right"
            android:paddingRight="5dip"
            android:text="@string/supervision_bts_tram"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rl_supervision_bts_equip_tv_matram"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="0.2"
            android:background="@drawable/bg_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/supervision_bts_matram"
            android:textSize="@dimen/text_size_common" />

        <TextView
            android:id="@+id/rl_supervision_bts_equip_tv_ct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.1"
            android:text="@string/supervision_bts_ct"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rl_supervision_bts_equip_tv_mact"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.2"
            android:background="@drawable/bg_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/supervision_bts_mact"
            android:textSize="@dimen/text_size_common" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tl_supervision_bts_header"
        android:layout_margin="@dimen/margin5"
        android:background="@drawable/border_layout"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/ll_bts_cndtc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding5" >
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/txt_date_update"
                        android:textSize="@dimen/text_size_common" />
                <TextView
                        android:id="@+id/tv_bts_cndtc_date_update"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:background="@drawable/bg_title"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="24/08/2016"
                        
                        android:textSize="@dimen/text_size_common" >
                    </TextView>
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/cndtc_ten_doi"
                        android:textSize="@dimen/text_size_common" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/txt_group_builder"
                        android:textSize="@dimen/text_size_common" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/txt_group_assembly"
                        android:textSize="@dimen/text_size_common" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/txt_group_equiment"
                        android:textSize="@dimen/text_size_common" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:background="@drawable/bg_title"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="24/08/2016"
                        android:visibility="invisible"
                        android:textSize="@dimen/text_size_common" >
                    </TextView>

                    <CheckBox
                        android:id="@+id/rd_bts_cndtc_group_builder"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:text=""
                        android:textColor="@color/black_color" />

                    <CheckBox
                        android:id="@+id/rd_bts_cndtc_group_assembly"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:text=""
                        android:textColor="@color/black_color" />

                    <CheckBox
                        android:id="@+id/rd_bts_cndtc_group_equiment"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:text=""
                        android:textColor="@color/black_color" />
                </LinearLayout>
                <!-- KienPV add new 12/09/2016 -->
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:text="@string/cndtc_so_nhan_cong"
                        android:textSize="@dimen/text_size_common" />

                    <com.viettel.view.control.VNMEditTextClearable
		                android:id="@+id/txt_builder_number_employees"
		                style="@style/vOfficeeditText"
		                android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
		                android:hint="@string/cndtc_so_nhan_cong"
		                android:inputType="number"
		                android:layout_marginBottom="5dp"
		                android:singleLine="true" >
		            </com.viettel.view.control.VNMEditTextClearable>

                    <com.viettel.view.control.VNMEditTextClearable
                         android:id="@+id/txt_assembly_number_employees"
		                style="@style/vOfficeeditText"
		                android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
		                android:hint="@string/cndtc_so_nhan_cong"
		                android:inputType="number"
		                android:layout_marginBottom="5dp"
		                android:singleLine="true" >
		            </com.viettel.view.control.VNMEditTextClearable>

                    <com.viettel.view.control.VNMEditTextClearable
                         android:id="@+id/txt_equiment_number_employees"
		                style="@style/vOfficeeditText"
		                android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_box_heigh"
		                android:hint="@string/cndtc_so_nhan_cong"
		                android:inputType="number"
		                android:layout_marginBottom="5dp"
		                android:singleLine="true" >
		            </com.viettel.view.control.VNMEditTextClearable>
                </LinearLayout>
                <!-- end -->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5" >

                <Button
                    android:id="@+id/btn_bts_cndtc_save"
                    style="@style/ViettelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/text_save" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>