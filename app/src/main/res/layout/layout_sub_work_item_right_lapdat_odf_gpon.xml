<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_right_bottom_left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ten_odf"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin0"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:paddingBottom="@dimen/padding1"
        android:paddingTop="@dimen/padding1"
        android:text="Tên ODF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center_vertical">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/tv_khoiluong"
            style="@style/vOfficeeditTextNumber" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_luyke"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin0"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:text="Lũy kế" />
</LinearLayout>
