<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding5">

    <TextView
        android:id="@+id/txtDetailSttProgress"
        style="@style/Header.Textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textStyle="normal"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/border_right"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_calendar"
            android:id="@+id/imgForTenHangMuc"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_marginStart="@dimen/margin_left_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Header.Textview"
            android:id="@+id/txtDetailTenHangMuc"
            android:layout_toRightOf="@id/imgForTenHangMuc"
            android:layout_marginLeft="@dimen/margin5"
            android:textStyle="normal"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:background="@drawable/border_top_right_bottom_left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Content.Textview"
            android:layout_marginRight="@dimen/margin0"
            android:layout_marginEnd="@dimen/margin0"
            android:id="@+id/txtSLLapDat"
            android:gravity="center"
            android:textStyle="normal"
            android:background="@drawable/border_top_right_bottom_left"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin0"
            android:layout_marginEnd="@dimen/margin0"
            style="@style/Content.Textview"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/txtSLHanNoi"
            android:background="@drawable/border_top_right_bottom_left"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:background="@drawable/border_top_right_bottom_left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Content.Textview"
            android:id="@+id/txtDetailKhoiLuong"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin0"
            android:layout_marginEnd="@dimen/margin0"
            android:background="@drawable/border_top_right_bottom_left"
            android:textStyle="normal"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Content.Textview"
            android:id="@+id/txtDetailKLHanNoi"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin0"
            android:layout_marginEnd="@dimen/margin0"
            android:background="@drawable/border_top_right_bottom_left"
            android:textStyle="normal"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Content.Textview"
        android:gravity="center"
        android:id="@+id/txtNgayHoanThanh"
        android:background="@drawable/border_top_right_bottom_left"
        android:textStyle="normal"/>
</LinearLayout>