<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_supervision_line_bg_measure_constr"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viettel.actionbar.Header
        android:visibility="gone"
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_constr_line_measure_constr_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu" >

        <TextView
            android:id="@+id/constr_line_measure_constr_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/line_background_header_title"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_constr_line_background_design_type_info"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_constr_line_measure_constr_rootmenu"
        android:background="@drawable/border_layout"
        android:orientation="vertical"
        android:padding="@dimen/padding5" >

        <LinearLayout
            android:id="@+id/ll_constr_line_measure_constr_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:background="@drawable/border_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_title"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_constr_line_measure_constr_info_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.3"
                android:gravity="center_vertical" >

                <com.viettel.view.control.VNMTextViewCombo
                    android:id="@+id/tv_cnv_dropdown"
                    style="@style/vOfficeeditTextView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:drawableRight="@drawable/icon_combo"
                    android:gravity="center_vertical"
                    android:text="@string/line_background_info_line_design"
                    android:textSize="@dimen/text_size_common" >
                </com.viettel.view.control.VNMTextViewCombo>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_line_title_tram"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_constr_line_measure_constr_info_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.2"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cnv_station_code_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:background="@drawable/bg_title"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding5"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_common" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_stationcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_line_station_code_title"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_supervision_bts_cnv_search_thietke"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.2"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cnv_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:background="@drawable/bg_title"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding5"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_common" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margin1"
                android:layout_marginLeft="250dp"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/btn_cnv_add"
                    style="@android:style/Widget.Holo.Button.Small"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />

                
            </RelativeLayout>
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/ll_line_bg_measure_constr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginTop="@dimen/margin1"
            android:background="@drawable/border_right"
            android:baselineAligned="false"
            android:minHeight="@dimen/table_row_height"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/border_top_right_bottom_left"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_stt"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/border_top_right_bottom_left"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_type"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_date"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_result"
                android:textStyle="bold" />
             <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
               android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_process"
                android:textStyle="bold" />
              <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
               android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cnv_list_view"
                android:textStyle="bold" />
              <!-- KienPV add new 10/09/2016 -->
              <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
               	android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/text_delete_button"
                android:textStyle="bold" />
              <!-- end -->
        </LinearLayout>

        <ListView
            android:id="@+id/lv_cnv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@drawable/border_right_bottom_left"
            android:choiceMode="singleChoice"
            android:minHeight="400dp"
            android:padding="@dimen/padding1" >
        </ListView>
    </LinearLayout>

</RelativeLayout>