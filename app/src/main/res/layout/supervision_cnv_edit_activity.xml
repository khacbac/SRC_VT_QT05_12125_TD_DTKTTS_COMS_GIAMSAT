<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_supervision_line_bg_measure_constr"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viettel.actionbar.Header
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_constr_line_measure_constr_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu"
        android:visibility="gone" >

        <TextView
            android:id="@+id/constr_line_measure_constr_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/line_background_header_title"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_constr_line_background_design_type_info"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_constr_line_measure_constr_rootmenu"
        android:background="@drawable/border_layout"
        android:orientation="vertical"
        android:padding="@dimen/padding5" >

        <LinearLayout
            android:id="@+id/ll_constr_line_measure_constr_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:background="@drawable/border_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_title"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_constr_line_measure_constr_info_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.3"
                android:gravity="center_vertical" >

                <com.viettel.view.control.VNMTextViewCombo
                    android:id="@+id/tv_cnv_dropdown"
                    style="@style/vOfficeeditTextView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:drawableRight="@drawable/icon_combo"
                    android:gravity="center_vertical"
                    android:text="@string/line_background_info_line_design"
                    android:textSize="@dimen/text_size_common" >
                </com.viettel.view.control.VNMTextViewCombo>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_line_title_tram"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_constr_line_measure_constr_info_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.2"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cnv_station_code_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:background="@drawable/bg_title"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding5"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_common" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_constr_line_measure_constr_info_stationcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:text="@string/line_background_info_line_station_code_title"
                android:textSize="@dimen/text_size_common" />

            <RelativeLayout
                android:id="@+id/rl_supervision_bts_cnv_search_thietke"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_weight="0.2"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cnv_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_box_heigh"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:background="@drawable/bg_title"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding5"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_common" />
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tl_supervision_bts_header"
            android:layout_margin="@dimen/margin5"
            android:background="@drawable/border_layout"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_common"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding5" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_right"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:padding="@dimen/padding5" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="@dimen/margin_left"
                                        android:layout_weight="0.3"
                                        android:gravity="center_vertical"
                                        android:text="@string/cnv_loai_vuong"
                                        android:textSize="@dimen/text_size_common" />

                                    <TextView
                                        android:id="@+id/tv_cnv_loai_vuong"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/drop_box_heigh"
                                        android:layout_weight="0.7"
                                        android:background="@drawable/bg_title"
                                        android:gravity="left"
                                        android:padding="@dimen/padding5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_size_common" />
                                    <LinearLayout
	                                    android:layout_marginBottom="10dp"
			                            android:layout_width="wrap_content"
			                            android:layout_height="wrap_content"
			                            android:orientation="vertical" >
			
			                            <RadioGroup
			                                android:id="@+id/rdg_loaivuong"
			                                android:layout_width="wrap_content"
			                                android:layout_height="wrap_content" >
			
			                                <RadioButton
			                                    android:id="@+id/rd_thietkedutoan"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:textColor="#000"
			                                    android:checked="true"
			                                    android:text="@string/cnv_Thiet_ke_du_toan"
			                                    android:textSize="@dimen/text_size_common" />
			
			                                <RadioButton
			                                    android:id="@+id/rd_gpxd"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:textColor="#000"
			                                    android:text="@string/cnv_gpxd"
			                                    android:textSize="@dimen/text_size_common" />
			
			                                <RadioButton
			                                    android:id="@+id/rd_dankien"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:textColor="#000"
			                                    android:text="@string/cnv_dan_kien"
			                                    android:textSize="@dimen/text_size_common" />
			
			                                <RadioButton
			                                    android:id="@+id/rd_quyhoach"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:text="@string/cnv_quy_hoach"
			                                    android:textColor="#000"
			                                    android:textSize="@dimen/text_size_common" />
			
			                                <RadioButton
			                                    android:id="@+id/rd_xacnhan4ben"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:textColor="#000"
			                                    android:text="@string/cnv_xac_nhan_4_ben"
			                                    android:textSize="@dimen/text_size_common" />
			
			                                <RadioButton
			                                    android:id="@+id/rd_khac"
			                                    android:layout_width="wrap_content"
			                                    android:layout_height="wrap_content"
			                                    android:layout_marginLeft="@dimen/margin_left"
			                                    android:gravity="center_vertical"
			                                    android:textColor="#000"
			                                    android:text="@string/cnv_khac"
			                                    android:textSize="@dimen/text_size_common" />
			                            </RadioGroup>
			                        </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="@dimen/margin_left"
                                        android:layout_weight="0.3"
                                        android:gravity="center_vertical"
                                        android:text="@string/cnv_ket_qua_xu_ly"
                                        android:textSize="@dimen/text_size_common" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.7"
                                        android:orientation="vertical" >

                                        <RadioGroup
                                            android:id="@+id/rdg_ketqua"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" >

                                            <RadioButton
                                                android:id="@+id/rd_trienkhaitiep"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/margin_left"
                                                android:gravity="center_vertical"
                                                android:text="@string/cnv_trien_khai_tiep"
                                                android:textColor="#000"
                                                android:textSize="@dimen/text_size_common" />

                                            <RadioButton
                                                android:id="@+id/rd_huycongtrinh"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/margin_left"
                                                android:gravity="center_vertical"
                                                android:text="@string/cnv_huy_cong_trinh"
                                                android:textColor="#000"
                                                android:textSize="@dimen/text_size_common" />
                                        </RadioGroup>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="fill_vertical|center_horizontal" >

                                    <ImageView
                                        android:id="@+id/iv_capture"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dip"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/icon_img_take" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:padding="@dimen/padding5" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left"
                                        android:layout_weight="0.3"
                                        android:text="@string/cnv_list_date"
                                        android:textSize="@dimen/text_size_common" />

                                    <TextView
                                        android:id="@+id/tv_ngay_vuong"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/drop_box_heigh"
                                        android:layout_weight="0.7"
                                        android:background="@drawable/bg_title"
                                        android:gravity="left"
                                        android:padding="@dimen/padding5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_size_common" />
                                </LinearLayout>
								<!-- KienPV add new 09/09/2016 -->
								<LinearLayout
		                            android:layout_width="fill_parent"
		                            android:layout_height="wrap_content"
		                            android:layout_marginTop="@dimen/margin_top_common"
		                            android:orientation="horizontal" >
		
		                            <TextView
		                                android:layout_width="0dp"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="@dimen/margin_left"
		                                android:layout_weight="0.3"
		                                android:text="@string/cnv_thong_tin_vuong"
		                                android:textSize="@dimen/text_size_common" />
		
		                            <EditText
		                                android:id="@+id/edt_des"
		                                style="@style/vOfficeeditText"
		                                android:layout_width="0dp"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="@dimen/margin_left"
		                                android:layout_weight="0.7"
		                                android:enabled="true"
		                                android:hint="@string/cnv_dien_giai"
		                                android:lines="5"
		                                android:padding="@dimen/padding5"
		                                android:textSize="@dimen/text_size_common" />
		                        </LinearLayout>
		                        <!-- end -->
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_top_common"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left"
                                        android:layout_weight="0.3"
                                        android:text="@string/cnv_dien_giai_qua_trinh_xl_vuong"
                                        android:textSize="@dimen/text_size_common" />

                                    <EditText
                                        android:id="@+id/edt_dien_giai"
                                        style="@style/vOfficeeditText"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left"
                                        android:layout_weight="0.7"
                                        android:enabled="true"
                                        android:hint="@string/cnv_dien_giai"
                                        android:lines="5"
                                        android:padding="@dimen/padding5"
                                        android:textSize="@dimen/text_size_common" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5" >

                    <Button
                        android:id="@+id/btn_bts_cnv_save"
                        style="@style/ViettelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:filterTouchesWhenObscured="true"
                        android:text="@string/text_save" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>