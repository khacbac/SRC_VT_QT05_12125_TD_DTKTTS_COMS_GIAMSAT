<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contruction_acceptance_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_dropdown_item"
    android:gravity="fill_vertical|center_horizontal"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_contruction_acceptance_category"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/noncategary"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:textSize="@dimen/text_size_common" />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        
        >
        <TextView
        android:id="@+id/tv_contruction_acceptance_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_left_15"
        android:textSize="@dimen/text_size_common" 
        android:text="sdfs sdfsdf sdfsdf sdfsdfs dfsdfs dfsdfsd fsdfsd fsdfs f"
        />
        <TextView
        android:id="@+id/tv_contruction_acceptance_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_left_15"
        android:textSize="@dimen/text_size_common" 
        android:textColor="#ff0000"
        android:textStyle="italic"
        android:text="sdfs sdfsdf sdfsdf sdfsdfs dfsdfs dfsdfsd fsdfsd fsdfs f"
        android:visibility="gone"
        />
        
    </LinearLayout>

    

    <TextView
        android:id="@+id/tv_contruction_acceptance_is_mandory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:text="(*)"
        android:textColor="#ff0000"
        android:textSize="@dimen/text_size_common"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="fill_vertical|center_horizontal" 
       android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_contruction_acceptance_status_approve"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_approval"
            android:layout_marginRight="5dp"
            android:visibility="visible"
             />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="fill_vertical|center_horizontal" 
       android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_contruction_acceptance_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_img_take" />
        
    </LinearLayout>

</LinearLayout>