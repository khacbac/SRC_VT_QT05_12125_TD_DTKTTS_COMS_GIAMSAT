<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_line_hg_cable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edt_line_hg_cable_fromdistance"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_box_heigh"
            android:layout_weight="0.5"
            style="@style/vOfficeeditText"
            android:inputType="number"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_line_hg_cable_todistance"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_box_heigh"
            android:layout_weight="0.5"
            style="@style/vOfficeeditText"
            android:inputType="number"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_line_hg_dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_line_hg_khongdat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding5" >

        <com.viettel.view.control.VNMTextViewNnkd
            android:id="@+id/edt_line_hg_cable_nnkhongdat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding5" >

        <TextView
            android:id="@+id/edt_line_hg_cable_diengiai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/iv_line_hg_cable_delete"
            android:layout_width="@dimen/icon_listview_width"
            android:layout_height="@dimen/icon_listview_height"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</LinearLayout>