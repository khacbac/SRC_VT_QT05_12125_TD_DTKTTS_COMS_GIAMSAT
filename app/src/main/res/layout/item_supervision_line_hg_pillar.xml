<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_line_hg_pillar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <TextView
                android:id="@+id/edt_itemsupervision_line_hg_pillar_code"
                style="@style/vOfficeeditTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_box_heigh"
                android:background="@drawable/icon_textbox"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:padding="@dimen/padding"
        android:gravity="center_horizontal|center_vertical" >

        <com.viettel.view.control.VNMTextViewNnkd
            android:id="@+id/edt_itemsupervision_line_hg_pillar_nnkhongdat"
            style="@style/vOfficeeditTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:padding="@dimen/padding"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/edt_itemsupervision_line_hg_pillar_diengiai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/iv_itemsupervision_line_hg_pillar_delete"
            android:layout_width="@dimen/icon_listview_width"
            android:layout_height="@dimen/icon_listview_height"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</LinearLayout>