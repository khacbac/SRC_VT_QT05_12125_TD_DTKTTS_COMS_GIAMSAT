<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gpon_height"
        android:background="@drawable/border_right_bottom_left"
        android:orientation="horizontal">

        <TextView
            style="@style/Header.Textview.Title"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Loại cáp" />

        <TextView
            style="@style/Header.Textview.Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Khối lượng" />

        <TextView
            android:id="@+id/tv_dvt"
            style="@style/Header.Textview.Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ĐVT(mét)" />

        <TextView
            style="@style/Header.Textview.Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lũy kế" />
        <TextView
            style="@style/Header.Textview.Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tiến độ" />
    </LinearLayout>

</merge>