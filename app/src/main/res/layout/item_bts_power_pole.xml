<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_bts_power_pole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

   <!--  <TextView
        android:id="@+id/bts_power_pole_tv_tencot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textSize="@dimen/text_size_common"
        android:textStyle="bold" /> -->
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" > 
  
        <TextView
            android:id="@+id/bts_power_pole_tv_tencot"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center"
            android:hint="@string/text_empty"
            android:singleLine="true"
            android:padding="@dimen/padding"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_common" /> 
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bts_power_pole_rl_nnkd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <com.viettel.view.control.VNMTextViewNnkd
            android:id="@+id/bts_power_pole_tv_nnkd"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/padding"
            android:singleLine="true" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <TextView
            android:id="@+id/edt_supervision_bts_power_pole_diengiai"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center"
            android:hint="@string/text_empty"
            android:singleLine="true"
            android:padding="@dimen/padding"
             android:maxLength="200"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_common" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/iv_supervision_bts_power_pole_delete"
            android:layout_width="@dimen/icon_listview_width"
            android:layout_height="@dimen/icon_listview_height"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</LinearLayout>