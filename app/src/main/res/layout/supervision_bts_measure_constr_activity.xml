<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_supervision_line_bg_measure_constr"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viettel.actionbar.Header
        android:visibility="gone"
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rl_supervision_bts_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu" >

        <TextView
            android:id="@+id/supervision_bts_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/supervision_bts_title"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/tl_supervision_bts_measure_constr_header"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_supervision_bts_rootmenu"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/border_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:visibility="visible" >

        <TextView
            android:id="@+id/trl_supervision_bts_measure_constr_row1_tv_thongtin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="0.1"
            android:text="@string/supervision_bts_tt"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_supervision_bts_measure_constr_search_thietke"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:paddingLeft="@dimen/padding_left" >

            <com.viettel.view.control.VNMTextViewCombo
                android:id="@+id/rl_supervision_bts_measure_constr_tv_thietke"
                style="@style/vOfficeeditTextView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true" >
            </com.viettel.view.control.VNMTextViewCombo>
        </RelativeLayout>

        <TextView
            android:id="@+id/rl_supervision_bts_measure_constr_tv_tram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.1"
            android:gravity="right"
            android:paddingRight="5dip"
            android:text="@string/supervision_bts_tram"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rl_supervision_bts_measure_constr_tv_matram"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="0.2"
            android:background="@drawable/bg_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/supervision_bts_matram"
            android:textSize="@dimen/text_size_common" />

        <TextView
            android:id="@+id/rl_supervision_bts_measure_constr_tv_ct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.1"
            android:text="@string/supervision_bts_ct"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rl_supervision_bts_measure_constr_tv_mact"
            android:layout_width="0dp"
            android:layout_height="@dimen/drop_box_heigh"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.2"
            android:background="@drawable/bg_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/supervision_bts_mact"
            android:textSize="@dimen/text_size_common" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_supervision_bts_measure_constr_header"
        android:background="@drawable/border_layout"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="vertical"
        android:padding="@dimen/padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <RelativeLayout
                android:id="@+id/rl_supervision_line_bg_measure_constr_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margin1"
                android:layout_marginLeft="250dp"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/btn_line_bg_measure_constr_add"
                    style="@android:style/Widget.Holo.Button.Small"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />

                <Button
                    android:id="@+id/btn_line_bg_measure_constr_save"
                    style="@android:style/Widget.Holo.Button.Small"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/btn_line_bg_measure_constr_add"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/text_save"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_large_common"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_line_bg_measure_constr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin1"
            android:background="@drawable/border_right"
            android:baselineAligned="false"
            android:minHeight="@dimen/table_row_height"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/border_top_right_bottom_left"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/item_name_measure"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/border_top_right_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/info_measure_detail"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/border_top_bottom"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/delete_item_measure"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_line_bg_measure_constr_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/border_right_bottom_left"
            android:choiceMode="singleChoice"
            android:minHeight="400dp"
            android:padding="@dimen/padding1" >
        </ListView>
    </LinearLayout>

</RelativeLayout>