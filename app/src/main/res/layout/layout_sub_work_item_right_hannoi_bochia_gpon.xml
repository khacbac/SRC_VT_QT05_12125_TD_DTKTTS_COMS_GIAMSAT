<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_right_bottom_left">

            <TextView
                android:id="@+id/tv_bochia"
                style="@style/Content.Textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bộ chia"
                android:background="@drawable/border_top_right_bottom_left"
                android:layout_marginRight="@dimen/margin0"
                android:layout_marginEnd="@dimen/margin0"
                android:paddingTop="@dimen/padding1"
                android:paddingBottom="@dimen/padding1"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border_right_bottom_left"
                android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/tv_khoiluong"
                    style="@style/vOfficeeditTextNumber"
                    android:inputType="number"
                    android:maxLength="9"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_luyke"
                style="@style/Content.Textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_top_right_bottom_left"
                android:text="Lũy kế"
                android:layout_marginRight="@dimen/margin0"
                android:layout_marginEnd="@dimen/margin0"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

