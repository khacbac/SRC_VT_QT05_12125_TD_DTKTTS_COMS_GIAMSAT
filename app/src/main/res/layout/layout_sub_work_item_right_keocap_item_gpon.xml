<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_item_loaicap"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="2"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:paddingBottom="@dimen/padding1"
        android:paddingTop="@dimen/padding1"
        android:text="Loại cáp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_right_bottom_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/tv_khoiluong"
            style="@style/vOfficeeditTextNumber"
            android:maxLength="12"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dvt"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:text="mét" />

    <TextView
        android:id="@+id/tv_luyke"
        style="@style/Content.Textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin0"
        android:layout_marginRight="@dimen/margin0"
        android:layout_weight="1"
        android:background="@drawable/border_top_right_bottom_left"
        android:gravity="center"
        android:text="Lũy kế" />
</merge>
