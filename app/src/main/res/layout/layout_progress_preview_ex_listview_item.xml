<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin5"
    android:paddingTop="@dimen/margin5">

    <TextView
        android:id="@+id/txtDetailSttProgress"
        style="@style/Header.Textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textStyle="normal"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/border_right">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_calendar"
            android:id="@+id/imgForTenHangMuc"
            android:layout_marginLeft="@dimen/margin_left_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Header.Textview"
            android:id="@+id/txtDetailTenHangMuc"
            android:layout_toRightOf="@id/imgForTenHangMuc"
            android:layout_marginLeft="@dimen/margin5"
            android:textStyle="normal"/>
    </RelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        style="@style/Content.Textview"
        android:id="@+id/txtDetailKhoiLuong"
        android:gravity="center"
        android:background="@drawable/border_top_right_bottom_left"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Content.Textview"
        android:id="@+id/txtDetailNgayBatDau"
        android:gravity="center"
        android:background="@drawable/border_top_right_bottom_left"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Content.Textview"
        android:gravity="center"
        android:id="@+id/txtDetailNgayHoanThanh"
        android:background="@drawable/border_top_right_bottom_left"
        android:textStyle="normal"/>
</LinearLayout>