<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:minHeight="50dip"
    android:orientation="horizontal" > 
  
    <TextView
        android:id="@+id/tv_supervision_bts_equip_stt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:gravity="center_horizontal|center_vertical"
        android:textStyle="bold" /> 
  
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:gravity="center" > 
  
        <TextView
            android:id="@+id/edt_supervision_bts_equip_tenhangmuc"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            android:background="@drawable/icon_textbox"
            android:gravity="left|center_vertical"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" /> 
    </RelativeLayout> 
  
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center" > 
  
        <CheckBox
            android:id="@+id/rd_supervision_bts_equip_dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
    </RelativeLayout> 
  
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center" > 
  
        <CheckBox
            android:id="@+id/rd_supervision_bts_equip_khongdat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
    </RelativeLayout> 
  
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:paddingLeft="@dimen/padding5"
        android:paddingRight="@dimen/padding5" >
  
        <com.viettel.view.control.VNMTextViewNnkd
            android:id="@+id/edt_supervision_bts_equip_nn_khongdat"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            android:gravity="center"
            style="@style/vOfficeeditTextView"
            android:hint="@string/text_empty"
            android:padding="@dimen/padding5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_common"
            android:textStyle="bold" /> 
    </RelativeLayout> 
  
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:paddingLeft="@dimen/padding5"
        android:paddingRight="@dimen/padding5" >
  
        <TextView
            android:id="@+id/edt_supervision_bts_equip_diengiai"
            android:layout_width="@dimen/edittext_width_common"
            android:layout_height="@dimen/text_box_heigh"
            style="@style/vOfficeeditTextView"
            android:gravity="center"
            android:hint="@string/text_empty"
            android:singleLine="true"
            android:padding="@dimen/padding5"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_common" /> 
    </RelativeLayout> 
  
</LinearLayout>
