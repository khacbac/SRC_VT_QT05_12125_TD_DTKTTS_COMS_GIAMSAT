<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_line_bg_pipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/edt_supervision_line_bg_pipe_tube"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditText"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/edt_supervision_line_bg_pipe_tukhoang"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditText"
                android:inputType="number"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/edt_supervision_line_bg_pipe_denbe"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditText"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/edt_supervision_line_bg_pipe_denkhoang"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditText"
                android:inputType="number"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_line_bg_pipe_dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_line_bg_pipe_khongdat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <com.viettel.view.control.VNMTextViewNnkd
                android:id="@+id/edt_supervision_line_bg_pipe_nnkhongdat"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditTextView"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal|center_vertical" >

            <TextView
                android:id="@+id/edt_supervision_line_bg_pipe_diengiai"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                style="@style/vOfficeeditTextView"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center_horizontal|center_vertical" >

            <ImageView
                android:id="@+id/iv_supervision_line_bg_pipe_delete"
                android:layout_width="@dimen/icon_listview_width"
                android:layout_height="@dimen/icon_listview_height"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>