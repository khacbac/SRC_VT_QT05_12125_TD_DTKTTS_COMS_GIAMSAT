<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_supervision_line_bg_pipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:minHeight="@dimen/list_item_min_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tv_supervision_brcd_giamsat_drop_stt"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:text="@string/line_cable_type_mot"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            android:layout_weight="1.5"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/padding5" >

            <EditText
                android:id="@+id/edt_supervision_brcd_gs_drop_doandau"
                style="@style/vOfficeeditText"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:inputType="number"
                android:maxLength="5"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_box_heigh"
            android:layout_weight="1.5"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/padding5" >

            <EditText
                android:id="@+id/edt_supervision_brcd_gs_drop_doancuoi"
                style="@style/vOfficeeditText"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:inputType="number"
                android:maxLength="5"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_brcd_giamsat_drop_dat"
                android:layout_marginLeft="@dimen/margin_left_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical" >

            <CheckBox
                android:id="@+id/rdo_brcd_giamsat_drop_khongdat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_35" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_35"
        android:layout_weight="0.4"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_weight="0.13"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/padding5" >

            <com.viettel.view.control.VNMTextViewNnkd
                android:id="@+id/edt_supervision_brcd_giamsat_drop_nnkhongdat"
                style="@style/vOfficeeditTextView"
                android:layout_width="@dimen/edittext_width_common"
                android:layout_height="@dimen/text_box_heigh"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tv_supervision_brcd_giamsat_drop_diengiai"
                style="@style/vOfficeeditTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_box_heigh"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/text_empty"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="@dimen/text_size_common"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center_horizontal|center_vertical" >

            <Button
                android:id="@+id/bt_brcd_giamsat_drop_delete"
                android:layout_width="@dimen/icon_listview_width"
                android:layout_height="@dimen/icon_listview_height"
                android:background="@drawable/ic_delete"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>