<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_supervision_line_bg_tank"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:windowSoftInputMode="stateVisible" >

    <com.viettel.actionbar.Header
        android:visibility="gone"
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_constr_line_tank_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu" >

        <TextView
            android:id="@+id/constr_line_tank_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/line_background_header_title_brcd_mt"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_constr_line_tank_rootmenu"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/ll_constr_line_background_design_type_info"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_constr_line_tank_rootmenu"
            android:background="@drawable/border_layout"
            android:orientation="vertical"
            android:padding="@dimen/padding5" >

            <LinearLayout
                android:id="@+id/ll_constr_line_tank_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/border_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding5" >

                <TextView
                    android:id="@+id/tv_constr_line_tank_info_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical"
                    android:text="@string/line_background_info_title"
                    android:textSize="@dimen/text_size_common" />

                <RelativeLayout
                    android:id="@+id/rl_constr_line_tank_info_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical" >

                    <com.viettel.view.control.VNMTextViewCombo
                        android:id="@+id/tv_constr_brcd_keocapnhanh_dropdown"
                        style="@style/vOfficeeditTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:drawableRight="@drawable/icon_combo"
                        android:gravity="center_vertical"
                        android:text="@string/brcd_background_design_info_mst"
                        android:textSize="@dimen/text_size_common" >
                    </com.viettel.view.control.VNMTextViewCombo>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_constr_line_tank_info_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical"
                    android:text="@string/line_background_info_line_title_tram"
                    android:textSize="@dimen/text_size_common" />

                <RelativeLayout
                    android:id="@+id/rl_constr_line_tank_info_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_constr_brcd_keocapnhanh_station_code_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:background="@drawable/bg_title"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:singleLine="true"
                        android:text="AGG0002_AGG0002"
                        android:textSize="@dimen/text_size_common" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_constr_line_tank_info_stationcode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical"
                    android:text="@string/line_background_info_line_station_code_title"
                    android:textSize="@dimen/text_size_common" />

                <RelativeLayout
                    android:id="@+id/rl_constr_line_tank_info_line_station_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_constr_brcd_keocapnhanh_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:background="@drawable/bg_title"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:singleLine="true"
                        android:text="ML ABC DDD"
                        android:textSize="@dimen/text_size_common" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignTop="@+id/btn_constr_brcd_back_keocapnhanh"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/line_bg_pipe_doancap"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_constr_brcd_keocapnhanh_chitiet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:layout_alignBaseline="@+id/textView1"
                        android:layout_alignBottom="@+id/textView1"
                        android:layout_toRightOf="@+id/textView1"
                        android:background="@drawable/bg_title"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding5"
                        android:singleLine="true"
                        android:text="SC01"
                        android:textSize="@dimen/text_size_common" />

                    <Button
                        android:id="@+id/btn_constr_brcd_luu_keocapnhanh"
                        style="@style/ViettelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="63dp"
                        android:layout_toLeftOf="@+id/btn_constr_brcd_back_keocapnhanh"
                        android:filterTouchesWhenObscured="true"
                        android:text="@string/text_save" />

                    <Button
                        android:id="@+id/btn_constr_brcd_back_keocapnhanh"
                        style="@style/ViettelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="22dp"
                        android:filterTouchesWhenObscured="true"
                        android:gravity="center"
                        android:text="@string/text_back" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loaicap"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(*)"
                            android:textColor="#ff0000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.viettel.view.control.VNMTextViewCombo
                            android:id="@+id/tv_chonloaicap_keocapnhanh"
                            style="@style/vOfficeeditTextView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/drop_box_heigh"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/supervision_bts_body_row1_tv_loaithietke"
                            android:textSize="@dimen/text_size_common" >
                        </com.viettel.view.control.VNMTextViewCombo>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cotcosan"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(*)"
                            android:textColor="#ff0000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.viettel.view.control.VNMEditTextClearable
                            android:id="@+id/ed_socotcosan_keocapnhanh"
                            style="@style/vOfficeeditTextNoPadding"
                            android:layout_width="@dimen/edittext_width_common"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingLeft="@dimen/padding5"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_common" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cottrongmoi"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.viettel.view.control.VNMEditTextClearable
                            android:id="@+id/ed_socotchongmoi_keocapnhanh"
                            style="@style/vOfficeeditTextNoPadding"
                            android:layout_width="@dimen/edittext_width_common"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingLeft="@dimen/padding5"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_common" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/line_background_design_tank_long"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(*)"
                            android:textColor="#ff0000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >

                        <com.viettel.view.control.VNMEditTextClearable
                            android:id="@+id/ed_chieudai_keocapnhanh"
                            style="@style/vOfficeeditTextNoPadding"
                            android:layout_width="@dimen/edittext_width_common"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingLeft="@dimen/padding5"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_common" >
                        </com.viettel.view.control.VNMEditTextClearable>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" >
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/line_bg_pipe_thongtincap_vatutb"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_constr_line_tank_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/loaicap"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.32"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:background="@drawable/border_top_bottom_left"
                            android:gravity="center_vertical|center_horizontal"
                            android:minHeight="@dimen/table_row_height"
                            android:text="@string/line_cable_type_hai"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:background="@drawable/border_top_bottom_left"
                            android:gravity="center_vertical|center_horizontal"
                            android:minHeight="@dimen/table_row_height" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/line_cable_type_bon"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/line_cable_type_tam"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/line_cable_type_muoihai"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soidropgo"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(*)"
                        android:textColor="#ff0000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.32"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:background="@drawable/border_top_bottom_left"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal" >

                            <com.viettel.view.control.VNMTextViewCombo
                                android:id="@+id/tv_loaihai_drop_keocapnhanh"
                                style="@style/vOfficeeditTextView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/drop_box_heigh"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_left_15"
                                android:layout_marginRight="@dimen/margin_left_15"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/supervision_bts_body_row1_tv_loaithietke"
                                android:textSize="@dimen/text_size_common" >
                            </com.viettel.view.control.VNMTextViewCombo>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:background="@drawable/border_top_bottom_left"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal" >

                            <com.viettel.view.control.VNMTextViewCombo
                                android:id="@+id/tv_loaibon_drop_keocapnhanh"
                                style="@style/vOfficeeditTextView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/drop_box_heigh"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/margin_left_15"
                                android:layout_marginRight="@dimen/margin_left_15"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/supervision_bts_body_row1_tv_loaithietke"
                                android:textSize="@dimen/text_size_common" >
                            </com.viettel.view.control.VNMTextViewCombo>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <com.viettel.view.control.VNMTextViewCombo
                        android:id="@+id/tv_loaitam_drop_keocapnhanh"
                        style="@style/vOfficeeditTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/margin_left_15"
                        android:layout_marginRight="@dimen/margin_left_15"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/supervision_bts_body_row1_tv_loaithietke"
                        android:textSize="@dimen/text_size_common" >
                    </com.viettel.view.control.VNMTextViewCombo>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal" >

                    <com.viettel.view.control.VNMTextViewCombo
                        android:id="@+id/tv_loaimuoihai_drop_keocapnhanh"
                        style="@style/vOfficeeditTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drop_box_heigh"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/margin_left_15"
                        android:layout_marginRight="@dimen/margin_left_15"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/supervision_bts_body_row1_tv_loaithietke"
                        android:textSize="@dimen/text_size_common" >
                    </com.viettel.view.control.VNMTextViewCombo>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin1"
                android:background="@drawable/border_right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/border_top_bottom_left"
                    android:gravity="center_horizontal|center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sotuthuebao"
                        android:textStyle="bold" />

                    <TextView
