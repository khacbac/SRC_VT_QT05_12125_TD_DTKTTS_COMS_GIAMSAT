<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ic_warning"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_warning"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cat_cause_unqualify_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkbox_cat_cause_unqualify"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/ic_warning"
        android:gravity="left|center"
        android:text="cuong" />

    <CheckBox
        android:id="@+id/checkbox_cat_cause_unqualify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="0dp" />

</RelativeLayout>