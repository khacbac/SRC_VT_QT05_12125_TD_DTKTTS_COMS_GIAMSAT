<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viettel.actionbar.Header
        android:visibility="gone"
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_line_hg_mx_rootmenu"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/bg_tbarmenu" >

        <TextView
            android:id="@+id/line_hg_mx_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical|left"
            android:text="@string/line_hang_header_title"
            android:textSize="@dimen/text_size_large_common"
            android:textStyle="normal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_line_hg_mx_rootmenu"
        android:layout_margin="@dimen/margin5"
        android:background="@drawable/border_layout"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding1" >

            <LinearLayout
                android:id="@+id/ll_constr_line_hang_design_type_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_layout"
                android:orientation="vertical"
                android:padding="@dimen/padding1" >

                <LinearLayout
                    android:id="@+id/ll_line_hg_mx_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding5" >

                    <TextView
                        android:id="@+id/tv_line_hg_mx_info_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:text="@string/line_hang_info_title"
                        android:textSize="@dimen/text_size_common" />

                    <RelativeLayout
                        android:id="@+id/rl_line_hg_mx_info_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical" >

                        <com.viettel.view.control.VNMTextViewCombo
                            android:id="@+id/tv_line_hg_mx_dropdown"
                            style="@style/vOfficeeditTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_combo"
                            android:hint="@string/line_hang_info_line_design"
                            android:textSize="@dimen/text_size_common" >
                        </com.viettel.view.control.VNMTextViewCombo>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_line_hg_mx_info_line"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:text="@string/line_hang_info_line_title"
                        android:textSize="@dimen/text_size_common" />

                    <RelativeLayout
                        android:id="@+id/rl_line_hg_mx_info_line"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_line_hg_mx_info_line_station_code_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/drop_box_heigh"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:background="@drawable/bg_title"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding5"
                            android:singleLine="true"
                            android:text="AGG0002_AGG0002"
                            android:textSize="@dimen/text_size_common" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_line_hg_mx_info_stationcode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:text="@string/line_hang_info_line_station_code_title"
                        android:textSize="@dimen/text_size_common" />

                    <RelativeLayout
                        android:id="@+id/rl_line_hg_mx_info_line_station_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_line_hg_mx_info_line_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/drop_box_heigh"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:background="@drawable/bg_title"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding5"
                            android:singleLine="true"
                            android:text="ML ABC DDD"
                            android:textSize="@dimen/text_size_common" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/border_layout" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/margin1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/text_empty"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_line_hg_mx_add"
                        style="@style/ViettelButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/text_add_new_pipe" />

                    <Button
                        android:id="@+id/btn_line_hg_mx_save"
                        style="@style/ViettelButton"
                        android:layout_width="0dp"
                        android:filterTouchesWhenObscured="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/text_save" />
                </LinearLayout>

                <TabHost
                    android:id="@+id/tabHost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin5" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical" >
                        </TabWidget>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_layout" >

                            <LinearLayout
                                android:id="@+id/ll_line_hg_mx_mxkhongdat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin5"
                                android:layout_marginRight="@dimen/margin5"
                                android:layout_marginTop="@dimen/margin5"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:id="@+id/ll_line_hg_mx_header"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="false"
                                    android:minHeight="@dimen/table_row_height"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/border_top_right_bottom_left"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/line_hg_mx_doancap_tenmx"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/border_top_right_bottom"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/line_hg_mx_doancap_nnkhongdat"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/border_top_right_bottom"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/line_hg_mx_doancap_diengiai"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.1"
                                        android:background="@drawable/border_top_right_bottom"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/line_hg_mx_doancap_vitri"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.1"
                                        android:background="@drawable/border_top_right_bottom"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/text_empty"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <ListView
                                    android:id="@+id/lv_line_hg_mx_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/border_right_bottom_left"
                                    android:choiceMode="singleChoice"
                                    android:minHeight="400dp"
                                    android:padding="@dimen/padding1" >
                                </ListView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_supervision_line_hg_mx_dokiem"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:baselineAligned="false"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin5"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_dropdown"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"
                                            android:text="@string/line_hg_mx_dk_trangthai"
                                            android:textSize="@dimen/text_size_common" />

                                        <RelativeLayout
                                            android:id="@+id/rl_supervision_line_hg_mx_trangthai_box"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.7"
                                            android:gravity="center_vertical" >

                                            <com.viettel.view.control.VNMTextViewCombo
                                                android:id="@+id/tv_supervision_line_hg_mx_dropdown_trangthai"
                                                style="@style/vOfficeeditTextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/drop_box_heigh"
                                                android:layout_marginRight="@dimen/margin5"
                                                android:drawableRight="@drawable/icon_combo"
                                                android:gravity="center_vertical"
                                                android:text="@string/line_hang_info_line_design"
                                                android:textSize="@dimen/text_size_common" >
                                            </com.viettel.view.control.VNMTextViewCombo>
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_nguoido"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"
                                            android:text="@string/line_hg_mx_dk_nguoido"
                                            android:textSize="@dimen/text_size_common" />

                                        <EditText
                                            android:id="@+id/edt_supervision_line_hg_mx_nguoido"
                                            style="@style/vOfficeeditText"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin5"
                                            android:layout_weight="0.7"
                                            android:ems="10"
                                            android:hint="@string/line_hg_mx_dk_nguoido"
                                            android:inputType="text"
                                            android:maxLength="10"
                                            android:singleLine="true" >
                                        </EditText>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_maydo"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"
                                            android:maxLength="100"
                                            android:text="@string/line_hg_mx_dk_maydo"
                                            android:textSize="@dimen/text_size_common" />

                                        <EditText
                                            android:id="@+id/edt_supervision_line_hg_mx_maydo"
                                            style="@style/vOfficeeditText"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin5"
                                            android:layout_weight="0.7"
                                            android:ems="10"
                                            android:hint="@string/line_hg_mx_dk_maydo"
                                            android:inputType="text"
                                            android:maxLength="100"
                                            android:singleLine="true" >
                                        </EditText>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_donvi"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"
                                            android:text="@string/line_hg_mx_dk_donvi"
                                            android:textSize="@dimen/text_size_common" />

                                        <EditText
                                            android:id="@+id/edt_supervision_line_hg_mx_donvi"
                                            style="@style/vOfficeeditText"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin5"
                                            android:layout_weight="0.7"
                                            android:ems="10"
                                            android:hint="@string/line_hg_mx_dk_donvi"
                                            android:inputType="text"
                                            android:maxLength="100"
                                            android:singleLine="true" >
                                        </EditText>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_sdt"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"                                            
                                            android:text="@string/line_hg_mx_dk_sdt"
                                            android:textSize="@dimen/text_size_common" />

                                        <EditText
                                            android:id="@+id/edt_supervision_line_hg_mx_sdt"
                                            style="@style/vOfficeeditText"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin5"
                                            android:layout_weight="0.7"
                                            android:ems="10"
                                            android:hint="@string/line_hg_mx_dk_sdt"
                                            android:inputType="phone"
                                            android:maxLength="15"
                                            android:singleLine="true" >
                                        </EditText>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_supervision_line_hg_mx_serialmay"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_left"
                                            android:layout_weight="0.3"
                                            android:gravity="center_vertical"
                                            android:text="@string/line_hg_mx_dk_serialmay"
                                            android:textSize="@dimen/text_size_common" />

                                        <EditText
                                            android:id="@+id/edt_supervision_line_hg_mx_serialmay"
                                            style="@style/vOfficeeditText"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin5"
                                            android:layout_weight="0.7"
                                            android:ems="10"
                                            android:hint="@string/line_hg_mx_dk_serialmay"
                                            android:inputType="text"
                                            android:singleLine="true" >
                                        </EditText>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/margin5"
                                    android:layout_weight="0.5"
                                    android:baselineAligned="false"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:id="@+id/ll_line_hg_mx_fiber"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:baselineAligned="false"
                                        android:minHeight="@dimen/table_row_height"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.1"
                                            android:background="@drawable/border_top_right_bottom_left"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:text="@string/line_hg_mx_dk_stt"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.4"
                                            android:background="@drawable/border_top_right_bottom"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:text="@string/line_hg_mx_dk_soi"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:background="@drawable/border_top_right_bottom"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:text="@string/line_hg_mx_dk_ketqua"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <ListView
                                        android:id="@+id/lv_line_hg_mx_fiber_list"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_right_bottom_left"
                                        android:choiceMode="singleChoice" >
                                    </ListView>
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </TabHost>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>